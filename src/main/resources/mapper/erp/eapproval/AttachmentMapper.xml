<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cmtProject.mapper.erp.eapproval.AttachmentMapper">

    <!-- 첨부파일 저장 -->
    <insert id="insertAttachment" parameterType="com.example.cmtProject.dto.erp.eapproval.AttachmentDTO">
        INSERT INTO ATTACHMENTS (
            FILE_NO,
            DOC_ID,
            ORIGINAL_NAME,
            SAVED_NAME,
            FILE_PATH,
            FILE_SIZE,
            FILE_TYPE,
            UPLOAD_DATE
        ) VALUES (
            (SELECT NVL(MAX(FILE_NO), 0) + 1 FROM ATTACHMENTS),
            #{docId},
            #{originalName},
            #{savedName},
            #{filePath},
            #{fileSize},
            #{fileType},
            SYSDATE
        )
    </insert>
    
    <!-- 첨부파일 일괄 저장 -->
    <insert id="insertAttachments" parameterType="java.util.List">
        <foreach collection="list" item="item" separator=" " open="INSERT ALL" close="SELECT * FROM DUAL">
            INTO ATTACHMENTS (
                FILE_NO,
                DOC_ID,
                ORIGINAL_NAME,
                SAVED_NAME,
                FILE_PATH,
                FILE_SIZE,
                FILE_TYPE,
                UPLOAD_DATE
            ) VALUES (
                (SELECT NVL(MAX(FILE_NO), 0) + #{foreach.index} + 1 FROM ATTACHMENTS),
                #{item.docId},
                #{item.originalName},
                #{item.savedName},
                #{item.filePath},
                #{item.fileSize},
                #{item.fileType},
                SYSDATE
            )
        </foreach>
    </insert>
    
    <!-- 파일 번호로 첨부파일 조회 -->
    <select id="selectAttachmentByFileNo" resultMap="attachmentResultMap">
        SELECT
            FILE_NO,
            DOC_ID,
            ORIGINAL_NAME,
            SAVED_NAME,
            FILE_PATH,
            FILE_SIZE,
            FILE_TYPE,
            UPLOAD_DATE
        FROM ATTACHMENTS
        WHERE FILE_NO = #{fileNo}
    </select>
    
    <!-- 문서ID로 첨부파일 목록 조회 -->
    <select id="selectAttachmentsByDocId" resultMap="attachmentResultMap">
        SELECT
            FILE_NO,
            DOC_ID,
            ORIGINAL_NAME,
            SAVED_NAME,
            FILE_PATH,
            FILE_SIZE,
            FILE_TYPE,
            UPLOAD_DATE
        FROM ATTACHMENTS
        WHERE DOC_ID = #{docId}
        ORDER BY FILE_NO
    </select>
    
    <!-- 첨부파일 삭제 -->
    <delete id="deleteAttachment">
        DELETE FROM ATTACHMENTS
        WHERE FILE_NO = #{fileNo}
    </delete>
    
    <!-- 문서의 첨부파일 삭제 -->
    <delete id="deleteAttachmentsByDocId">
        DELETE FROM ATTACHMENTS
        WHERE DOC_ID = #{docId}
    </delete>
    
    <!-- Result Map -->
    <resultMap id="attachmentResultMap" type="com.example.cmtProject.dto.erp.eapproval.AttachmentDTO">
        <id property="fileNo" column="FILE_NO"/>
        <result property="docId" column="DOC_ID"/>
        <result property="originalName" column="ORIGINAL_NAME"/>
        <result property="savedName" column="SAVED_NAME"/>
        <result property="filePath" column="FILE_PATH"/>
        <result property="fileSize" column="FILE_SIZE"/>
        <result property="fileType" column="FILE_TYPE"/>
        <result property="uploadDate" column="UPLOAD_DATE"/>
    </resultMap>
</mapper>